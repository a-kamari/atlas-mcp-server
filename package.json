{
  "name": "atlas-mcp-server",
  "version": "2.8.0",
  "description": "A Model Context Protocol (MCP) server for ATLAS, a Neo4j-powered task management system for LLM Agents - implementing a three-tier architecture (Projects, Tasks, Knowledge) to manage complex workflows.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "atlas-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && node --loader ts-node/esm scripts/make-executable.ts dist/index.js",
    "start": "node dist/index.js",
    "dev": "tsc -w",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "rebuild": "ts-node --esm scripts/clean.ts && npm run build",
    "tree": "ts-node --esm scripts/tree.ts",
    "db:backup": "node --loader ts-node/esm scripts/db-backup.ts",
    "db:import": "node --loader ts-node/esm scripts/db-import.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "neo4j",
    "project-management",
    "typescript",
    "llm",
    "agent",
    "llm-agent",
    "collaboration",
    "task-management",
    "graph-database",
    "automation",
    "task-automation",
    "atlas",
    "knowledge-management",
    "dependency-tracking",
    "unified-search",
    "project-tracking",
    "neo4j-integration",
    "three-tier-architecture"
  ],
  "author": "@cyanheads",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.1",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.17",
    "@types/node-cron": "^3.0.11",
    "chrono-node": "^2.8.0",
    "commander": "^13.1.0",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fuzzysort": "^3.1.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.5",
    "neo4j-driver": "^5.28.1",
    "node-cron": "^4.0.3",
    "node-schedule": "^2.1.1",
    "openai": "^4.98.0",
    "partial-json": "^0.1.7",
    "sanitize-html": "^2.16.0",
    "tiktoken": "^1.0.21",
    "validator": "^13.15.0",
    "winston": "^3.17.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node-schedule": "^2.1.7",
    "@types/sanitize-html": "^2.16.0",
    "@types/validator": "^13.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
